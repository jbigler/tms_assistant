%h2 Edit #{resource_name.to_s.humanize}
= form_for resource, :as => resource_name, 
  :url => registration_path(resource_name), 
  :html => { :method => :put } do |f|
  = devise_error_messages!
  %fieldset
    %ol
      %li
        = f.label :name
        = f.text_field :name
      %li
        = f.label :email
        = f.text_field :email
      %li
        = f.label :locale
        = f.select( :locale, Language.all.collect {|r| [ r.name, r.code ] }, { :include_blank => false })
      %li
        = f.label :password
        = f.password_field :password
        %i (leave blank if you don't want to change it)
      %li
        = f.label :password_confirmation
        = f.password_field :password_confirmation
      %li
        = f.label :current_password
        = f.password_field :current_password
        %i (we need your current password to confirm your changes)
  %p= f.submit
%h3= t 'devise.forms.registrations.cancel'
%p= link_to t('devise.forms.registrations.cancel'), registration_path(resource_name),
  :confirm => "Are you sure?", :method => :delete
= link_to t('nav.back'), :back
