%h2= t 'devise.forms.registrations.sign_up' 
= form_for resource, :as => resource_name, 
  :url => registration_path(resource_name) do |f|
  %fieldset
    = f.text_field :name
    = f.email_field :email
    = f.select(:locale, Language.all.collect { |r| [ r.name, r.code ] }, { :include_blank => false, :selected => I18n.locale })
    = f.password_field :password
    = f.password_field :password_confirmation
  = f.submit t 'devise.forms.registrations.sign_up'
= render :partial => "devise/shared/links"
