%h2= t 'devise.forms.registrations.sign_up' 
= form_for resource, :as => resource_name, 
  :url => registration_path(resource_name) do |f|
  = devise_error_messages!
  %fieldset
    %ol
      %li
        = f.label :name
        = f.text_field :name
      %li
        = f.label :email
        = f.text_field :email
      %li
        = f.label :locale
        = f.select( :locale, Language.all.collect {|r| [ r.name, r.code ] }, { :include_blank => false })
      %li
        = f.label :password
        = f.password_field :password
      %li
        = f.label :password_confirmation
        = f.password_field :password_confirmation
  = f.submit t 'devise.forms.registrations.sign_up'
= render :partial => "devise/shared/links"
