#box
  #block-login.block
    %h2 Sign In
    .content.login
      .flash
        - flash.each do |type, message|
          .alert-box{ :class => type }
            %p=  message
      = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form login"} ) do |f|
        = f.label( :email, :class => "label" )
        = f.text_field( :email, :class => "input_text" )
        = f.label( :password, :class => "label" )
        = f.password_field( :password, :class => "input_text" )
        - if devise_mapping.rememberable?
          = f.label( :remember_me, :class => "label" )
          = f.check_box( :remember_me, :class => "check_box" )
        %p= f.submit "Sign in"
= render :partial => "devise/shared/links"
