%h2= t 'devise.forms.sessions.sign_in'
= form_for resource, :as => resource_name,
  :url => session_path(resource_name) do |f|
  %fieldset
    = f.email_field :email
    = f.password_field :password
    - if devise_mapping.rememberable?
      = f.check_box :remember_me, :label => t('devise.forms.sessions.remember_me')
  = f.submit t 'devise.forms.sessions.sign_in'
= render :partial => "devise/shared/links"
