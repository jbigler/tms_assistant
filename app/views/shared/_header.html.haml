#header.container
  .row
    .four.columns
      %h1
        %a{:href => "/"} TMS Assistant
    .eight.columns
      #user-nav
        = render 'devise/menu/login_items'
  .row
    .twelve.columns
      - if current_user
        %ul.nav-bar
          %li= link_to 'Dashboard', root_path
          - if session[:congregation_id]
            - cong = current_user.congregations.find(session[:congregation_id])
            %li= link_to "Assignments", congregation_school_sessions_path(cong) 
            %li= link_to "Students", congregation_students_path(cong) 
            %li Reports
            %li.has-flyout
              = link_to "Tools", "#"
              .flyout.small
                %ul
                  %li= link_to "Edit Special Dates", congregation_special_dates_path(cong)
                  %li= link_to "Edit Schedule", language_schedules_path(cong.language)
                  %li= link_to "Edit Lessons", language_lesson_sources_path(cong.language)
                  %li= link_to "Edit Settings", language_setting_sources_path(cong.language)
